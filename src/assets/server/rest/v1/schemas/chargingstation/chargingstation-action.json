{
  "title": "Charging Station Action Request",
  "type": "object",
  "properties": {
    "chargingStationID": {
      "$ref": "chargingstation.json#/definitions/id"
    },
    "carID": {
      "$ref": "common.json#/definitions/id"
    },
    "args": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "sanitize": "mongo"
        },
        "key": {
          "type": ["string", "array"],
          "sanitize": "mongo"
        },
        "value": {
          "type": "string",
          "sanitize": "mongo"
        },
        "custom": {
          "type": "boolean",
          "sanitize": "mongo"
        },
        "connectorId": {
          "$ref": "chargingstation.json#/definitions/connector/properties/connectorId"
        },
        "duration": {
          "type": "number",
          "sanitize": "mongo"
        },
        "chargingRateUnit": {
          "type": "string",
          "sanitize": "mongo",
          "enum": ["A", "W"]
        },
        "chargingProfilePurpose": {
          "$ref": "chargingstation.json#/definitions/chargingProfile/properties/profile/properties/chargingProfilePurpose"
        },
        "stackLevel": {
          "$ref": "chargingstation.json#/definitions/chargingProfile/properties/profile/properties/stackLevel"
        },
        "visualTagID": {
          "type": "string",
          "sanitize": "mongo"
        },
        "userID": {
          "$ref": "common.json#/definitions/id"
        },
        "location": {
          "type": "string",
          "sanitize": "mongo"
        },
        "retries": {
          "type": "number",
          "sanitize": "mongo"
        },
        "retryInterval": {
          "type": "number",
          "sanitize": "mongo"
        },
        "startTime": {
          "type": "string",
          "format": "date-time",
          "sanitize": "mongo"
        },
        "stopTime": {
          "type": "string",
          "format": "date-time",
          "sanitize": "mongo"
        },
        "retrieveDate": {
          "type": "string",
          "format": "date-time",
          "sanitize": "mongo"
        },
        "transactionId": {
          "$ref": "transaction.json#/definitions/id"
        },
        "csChargingProfile": {
          "$ref": "chargingstation.json#/definitions/chargingProfile"
        }
      }
    },
    "chargePointID": {
      "$ref": "common.json#/definitions/id"
    }
  },
  "required": [
    "chargingStationID"
  ]
}
